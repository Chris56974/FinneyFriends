{
  "compileroptions": {
    "lib": [ "es2018", "dom", "dom.iterable" ],
    "include": [ "src" ],
    "module": "commonjs",
    "moduleresolution": "node",
    "target": "es2018", // "target": "es5",
    "strict": true,
    "sourcemap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // hmm?
    "skipLibCheck": true, // hmm?
    "noFallthroughCasesInSwitch": true, // hmm?
    "allowSyntheticDefaultImports": true, // hmm?
  }
}